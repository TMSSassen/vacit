{% extends 'base.html.twig' %}

{% block title %}Hello RegisterController!{% endblock %}
{% block stylesheets %}
   <link rel="stylesheet" href="{{ asset('assets/css/register.css') }}"/>
{% endblock %}

{% block main %}
    {{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>
    <span>
        <p>Voornaam</p>{{ form_row(form.voornaam) }}
        <p>Achternaam</p>{{ form_row(form.achternaam) }}
    </span>
    <span>
        <p>Email</p>{{ form_row(form.email) }}
    </span>
    <span>
        <p>Geboortedatum</p>{{ form_row(form.geboortedatum) }}
        <p>Telefoonnummer</p>{{ form_row(form.telefoonnummer) }}
    </span>
    <span>
        <p>Adres</p>{{ form_row(form.adres) }}
    </span>
    <span>
        <p>Postcode</p>{{ form_row(form.postcode) }}
        <p>Woonplaats</p>{{ form_row(form.woonplaats) }}
    </span>
{{ form_end(form) }}
{% endblock %}