<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        <link rel="stylesheet" href="{{ asset('assets/foundation/css/foundation.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/fontawesome/css/all.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/basestyle.css') }}">
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}
        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        <div class="header">
            {% block header %}
                <div class="grid-x">
                    <div class="logo cell small-8 medium-6">
                        full width cell
                    </div>
                    <div class="smallmenubuttons cell small-4 hide-for-medium">
                        <i class="fas fa-bars"></i>
                    </div>
                    <div class="mediummenubuttons cell medium-6 show-for-medium">
                        full width cell
                    </div>
                </div>
            {% endblock %}
        </div>
        <div class="mainDiv">

            {% block main %}
            {% endblock %}

        </div>
        <div class="footer">
            {% block footer %}
                <div class="grid-x">
                    <div class="smallmenubuttons cell small-6 hide-for-medium">
                        full width cell
                    </div>
                    <div class="logo cell small-6 medium-3">
                        full width cell
                    </div>
                    <div class="mediummenubuttons cell medium-9 show-for-medium">
                        full width cell
                    </div>
                </div>
            {% endblock %}
        </div>
    </body>
    <script src="{{ asset('assets/js/jquery-3.5.1.min.js') }}"></script>
    <!-- this will include every plugin and utility required by Foundation -->
    <script src="{{ asset('assets/foundation/js/foundation.js') }}"></script>
    <script src="{{ asset('assets/fontawesome/js/all.js') }}"></script> 
</html>
